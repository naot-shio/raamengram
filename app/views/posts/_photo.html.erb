<div class="cardbox-heading">
  <div class="media m-0">
    <div class="media-body">
      <h5 class="ml-1"><%= link_to post.user do %><%= post.user.username %><% end %></h5>
      <small class="float-right"><%= time_ago_in_words(post.created_at) %> ago</small>
    </div>
  </div>
</div>
<div class="cardbox-item">
  <%= image_tag post.thumbnail if post.image.attached? %>
</div>