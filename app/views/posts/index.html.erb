<div class="row">
  <div class="col-md-3">
    <h1><%= current_user.name %></h1>
  </div>

  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_with model: @post, local: true do |f| %>
          <div class="form-group">
            <%= f.label :name, 'Name' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :price, 'Price' %>
            <%= f.number_field :price, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :content, 'Description' %>
            <%= f.text_area :content, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :image %>
            <%= f.file_field :image, class: 'form-control' %>
          </div>

          <%= f.submit 'Post', class: 'btn btn-primary float-right' %>
        <% end %>
      </div>
    </div>

    <div class="clear"></div>
  
    <% @posts.each do |post| %>
      <section class="post">
        <div class="container">
          <div class="row">	
            <div class="cardbox shadow-lg bg-white">
              <div class="cardbox-heading">
                <div class="media m-0">
                  <div class="media-body">
                    <p class="m-0"><%= post.user.name %></p>
                    <small class="float-right"><%= time_ago_in_words(post.created_at) %> ago</small>
                  </div>
                </div>
              </div>
              <div class="cardbox-item">
                <%= image_tag post.image.variant(combine_options: {resize: '550>', gravity: 'Center', crop: '550x550+0+0'}) if post.image.attached? %>
              </div>
              <div class="cardbox-base">
                <P>Name: <%= link_to post do %><%= post.name %><% end %></P>
                <p>Price: <%= post.price %> yen</p>
              </div>
            </div>
          </div>
        </div>
      </section>
    <% end %>
    <%= paginate @posts %>
  </div>

  <div class="col-md-3">
  
  </div>
</div>

