<% if user_signed_in? %>
  <div class="panel panel-default">
    <div class="panel-body">
      <%= form_with model: @post, local: true do |f| %>
        <div class="form-group">
          <%= f.label :shop, 'Shop' %>
          <%= f.text_field :shop, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :area, 'Area' %>
          <%= f.text_field :area, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :name, 'Name' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :price, 'Price' %>
          <%= f.number_field :price, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :broth, 'Broth' %>
          <%= f.text_field :broth, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :content, 'Description' %>
          <%= f.text_area :content, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= f.label :image %>
          <%= f.file_field :image, class: 'form-control' %>
        </div>

        <%= f.submit 'Post', class: 'btn btn-primary float-right' %>
      <% end %>
    </div>
  </div>

  <div class="clear"></div>
<% end %>