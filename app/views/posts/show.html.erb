<div class="row">
  <div class="col-lg-4">
    <div class="card profile">
      <h5 class="card-header">Shop Information</h5>
      <div class="card-body">
        <p class="card-text">Name: <%= @post.shop %></p>
        <p class="card-text">Area: <%= @post.area %></p>
      </div>
    </div>
  </div>

  <div class="col-lg-8">
    <div class="col-lg-8 offset-lg-2">
      <section class="post">
        <div class="row">	
          <div class="cardbox shadow-lg bg-white">
            <%= render 'photo', post: @post %>
            <% if current_user.id == @post.user.id %>
              <div class="float-right">
                <%= link_to edit_post_path(@post) do %><span class="icon"><i class="fas fa-edit"></i></span><% end %>
                <%= link_to @post, method: :delete, data: {confirm: "Are you sure you want to delete this post?" } do %>
                  <span class="icon"><i class="fas fa-trash-alt"></i></span>
                <% end %>
              </div>
              <div class="clear"></div>
            <% end %>
            <div class="cardbox-base">
              <%= render 'like_button' %>
      
              <% if @count_likes == 0 %>
                <p class="likes">No one likes this post yet</p>
              <% else %>
                <h4 class="likes">+ <%= @count_likes %></h4>
              <% end %> 
              
              <p>Name: <%= @post.name %></p>
              <p>Price: <%= @post.price %> yen</p>
              <p>Broth: <%= @post.broth %></p>
              <p><%= @post.content %></p>     
            </div>

            <% if user_signed_in? %>
              <%= form_with model: [@post, @comment], local: true do |f| %>
              
                <div class="form-group">
                  <%= f.text_field :comment, placeholder: 'Comment!' ,class: 'form-control' %>
                </div>
                <%= f.submit 'Submit', class: 'btn btn-success' %>
              <% end %>
            <% end %>
            
            <% @post.comments.each do |comment| %>
              <div class="cardbox-comment">
                <p><%= comment.comment %></p>
                <p><%= comment.user.name %></p>
                <p><%= comment.created_at %></p>
                <%= link_to 'Delete', [@post, comment], method: :delete, data: {confirm: "Are you sure you want to delete this comment?" }  %>
              </div>
            <% end %>
          </div>
        </div>
      </section>
    </div>
  </div>
</div>