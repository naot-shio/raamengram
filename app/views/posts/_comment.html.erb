<% post.comments.each do |comment| %>
  <div class="cardbox-comment">
    <div>
      <h5 class="comment"><%= comment.user.name %></h5>
      <p class="comment"><%= time_ago_in_words(comment.created_at) %> ago</p>
    </div>
    
    <p><%= comment.comment %></p>
    
    <% if comment.user.id == current_user.id %>
      <%= link_to 'Delete', [@post, comment], method: :delete, data: {confirm: "Are you sure you want to delete this comment?" }, class: 'btn btn-danger float-right'  %>
      <div class="clear"></div>
    <% end %>
    
    <hr />
  </div>
<% end %>